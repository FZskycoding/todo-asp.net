@model TodoListApp.Models.TodoItem

<div class="TodoWrapper">
    <h1>Edit Task</h1>

    <form asp-action="Edit" method="post" class="TodoForm">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Title" class="todo-label">Task</label>
            <input asp-for="Title" class="todo-input" />
            <button type="submit" class="todo-btn">Save</button>
            <a asp-action="Index" class="todo-btn cancel-btn">Cancel</a>
        </div>        
    </form>
</div>



