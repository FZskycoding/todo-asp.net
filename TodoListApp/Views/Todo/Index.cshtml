@model List<TodoListApp.Models.TodoItem>
<h1>My Task</h1>

<form asp-action="Add" method="post">
    <input type="text" placeholder="task" name="title"/>
    <button type="submit">Add</button>
</form>

<ul>
    @foreach (var item in Model)
    {
        <li>
            @item.Title
            <form asp-controller="Todo" asp-action="Delete" method="post" style="display:inline;">
                <input type="hidden" name="id" value="@item.Id" />
                <button type="submit">delete</button>
     
            </form>
            
            <form asp-controller="Todo" asp-action="Edit" asp-route-id="@item.Id" method="get" style="display:inline;">
                <button type="submit">edit</button>
            </form>
            
        </li>
    }
</ul>